# AI Agent Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# LLM Provider Configuration
# Set USE_AZURE_OPENAI=true to use Azure OpenAI instead of OpenAI API
USE_AZURE_OPENAI=false

# OpenAI API (when USE_AZURE_OPENAI=false)
# Set your API key here or store in macOS Keychain for enhanced security
# To use macOS Keychain: security add-generic-password -s "ai-agent-demos" -a "openai-api-key" -w
# OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.0

# Azure OpenAI Configuration (when USE_AZURE_OPENAI=true)
# AZURE_OPENAI_API_KEY=your-azure-api-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name
# AZURE_OPENAI_API_VERSION=2024-02-01

# LLM Logging Configuration
# Enable comprehensive logging of all LLM interactions (prompts, responses, tokens, latency)
ENABLE_LLM_LOGGING=true
LOG_LLM_PROMPTS=true          # Set to false in production if prompts contain PII
LOG_LLM_RESPONSES=true
MLFLOW_LOG_LLM_MODELS=true
MLFLOW_LOG_LLM_INPUTS_OUTPUTS=true

# MLFlow Configuration
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_EXPERIMENT_NAME=loan-approval-agent

# Databricks Configuration
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-databricks-token

# MS Teams Notifications
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/...

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Loan Policy Thresholds
MIN_CREDIT_SCORE=580
MAX_DTI_RATIO=0.43
MIN_EMPLOYMENT_MONTHS=6
BANKRUPTCY_YEARS_THRESHOLD=7
FORECLOSURE_YEARS_THRESHOLD=7

# Loan Limits
MAX_LOAN_AMOUNT=10000000
MIN_LOAN_AMOUNT=1000